{
  "name": "chain-develop",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "docs"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:blog\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:blog": "cd docs && npm run start",
    "build:frontend": "cd frontend && npm run build",
    "build:blog": "cd docs && npm run build",
    "build:merge": "npm run build:frontend && npm run build:blog && node scripts/merge-builds.js",
    "build:cloudflare": "npm run build:merge"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
