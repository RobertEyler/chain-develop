{
  "build": {
    "command": "cd frontend && npm run build",
    "cwd": "frontend",
    "output": "dist"
  },
  "headers": {
    "/*": {
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff",
      "X-XSS-Protection": "1; mode=block",
      "Referrer-Policy": "strict-origin-when-cross-origin"
    }
  },
  "redirects": [
    {
      "source": "/assessment",
      "destination": "/index.html",
      "statusCode": 200
    }
  ]
}
